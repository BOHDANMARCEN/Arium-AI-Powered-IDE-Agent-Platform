{
  "name": "arium-core",
  "version": "0.1.0",
  "description": "Arium — core runtime (EventBus, VFS, Tool Engine, Agent Core) — minimal starter",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "cli": "ts-node src/cli/index.ts",
    "cli:build": "tsc -p tsconfig.json --outDir dist",
    "cli": "node ./dist/cli/index.js",
    "test": "jest --runInBand",
    "test:cli": "jest tests/cli --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "bin": {
    "arium": "./dist/cli/index.js"
  },
  "author": "Bogdan Marcen & ChatGPT 5.1",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.12.0",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.3",
    "lru-cache": "^10.4.3",
    "openai": "^4.28.0",
    "pino": "^8.0.0",
    "pino-pretty": "^10.0.0",
    "ulid": "^2.3.0",
    "vm2": "^3.9.19",
    "ws": "^8.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.10",
    "execa": "^8.0.1",
    "jest": "^29.5.0",
    "jest-diff": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-morph": "^21.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
