{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": [
    "src/app",
    "src/core/models/modelManager.ts",
    "src/core/models/ollama/OllamaModelService.ts",
    "node_modules",
    "dist",
    "tests"
  ]
}
